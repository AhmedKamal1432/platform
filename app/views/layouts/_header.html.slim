

nav.navbar.navbar-inverse
  .container-fluid
    .navbar-header
      button.navbar-toggle data-target="#myNavbar" data-toggle="collapse" type="button" 
        span.icon-bar
        span.icon-bar
        span.icon-bar
      .navbar-brand  
        = link_to t('amahi'), root_url
